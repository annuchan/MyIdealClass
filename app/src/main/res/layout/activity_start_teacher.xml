<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Start_activity_teacher"
    android:background="#EDEDE9">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top">
    <com.google.android.material.navigation.NavigationView
        style="@style/MyUpBar">
        <LinearLayout
            android:orientation="horizontal"
            style="@style/MyLinerLayout">
            <ImageView
                android:id="@+id/startactivity"
                style="@style/MyImageView"
                app:srcCompat="@drawable/logotype"
                android:layout_marginStart="10dp" />
            <Button
                android:id="@+id/about_app"
                android:text="О ПРИЛОЖЕНИИ"
                android:backgroundTint="@color/button_color_up"
                android:textSize="13sp"
                style="@style/MyButtonStyleMargin"/>
            <View
                style="@style/MyLineVertical"/>
            <Button
                android:id="@+id/supportbutton"
                android:text="ПОДДЕРЖКА"
                android:backgroundTint="@color/button_color_up"
                android:textSize="13sp"
                style="@style/MyButtonStyleMargin"/>
            <View
                style="@style/MyLineVertical"/>
            <ImageView
                android:id="@+id/exitbutton"
                style="@style/MyImageView"
                app:srcCompat="@drawable/exitbutton"/>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        style="@style/MyLinerLayout">
        <LinearLayout
            android:orientation="horizontal"
            style="@style/MyLinerLayout">
            <ImageView
                android:id="@+id/dropdown_menu"
                style="@style/MyImageView"
                app:srcCompat="@drawable/menu"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/back"
                style="@style/MyImageView"
                app:srcCompat="@drawable/left_arrow"/>
            <TextView
                style="@style/MyTextView"
                android:layout_width="match_parent"
                android:text="Добро пожаловать"
                android:textSize="25sp"
                android:fontFamily="@font/jost_semibold"/>
        </LinearLayout>
        <TextView
            style="@style/MyTextView"
            android:layout_width="match_parent"
            android:text="Добро пожаловать, учитель! Ниже представлено меню, по которому ты можешь перейти, подробнее по каждому пункту будет рассказано на самих окнах"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Домашнее задание"
            style="@style/MyButtonStyle"
            android:padding="10dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ОценкИ"
            style="@style/MyButtonStyle"
            android:padding="10dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Итоговая оценка"
            style="@style/MyButtonStyle"
            android:padding="10dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Мероприятия"
            style="@style/MyButtonStyle"
            android:padding="10dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="КРужок"
            style="@style/MyButtonStyle"
            android:padding="10dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="питание"
            style="@style/MyButtonStyle"
            android:padding="10dp"/>
        <FrameLayout
            android:id="@+id/footer"
            style="@style/MyLinerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#E3D5CA">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/MyLinerLayout"
                android:background="#D6CCC2"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/startactivity2"
                    style="@style/MyImageView"
                    app:srcCompat="@drawable/logotype"
                    android:layout_marginStart="10dp" />
                <TextView
                    style="@style/MyTextView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:text="Пользовательское соглашение"
                    android:textSize="15sp"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>
</RelativeLayout>