<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Start_activity_teacher"
    android:background="#EDEDE9">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        style="@style/MyLinerLayout">
        <LinearLayout
            android:orientation="horizontal"
            style="@style/MyLinerLayout">
            <ImageView
                android:id="@+id/dropdown_menu"
                style="@style/MyImageView"
                app:srcCompat="@drawable/menu"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/back"
                style="@style/MyImageView"
                app:srcCompat="@drawable/left_arrow"/>
            <TextView
                style="@style/MyTextView"
                android:layout_width="match_parent"
                android:text="Добро пожаловать"
                android:textSize="25sp"
                android:fontFamily="@font/jost_semibold"/>
        </LinearLayout>
        <TextView
            style="@style/MyTextView"
            android:layout_width="match_parent"
            android:text="Добро пожаловать, учитель! Ниже представлено меню, по которому ты можешь перейти, подробнее по каждому пункту будет рассказано на самих окнах"/>
        <Button
            android:id="@+id/homework"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Домашнее задание"
            style="@style/MyButtonStyle"
            android:padding="10dp"/>
        <Button
            android:id="@+id/gradels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ОценкИ"
            style="@style/MyButtonStyle"
            android:padding="10dp"/>
        <Button
            android:id="@+id/final_gradels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Итоговая оценка"
            style="@style/MyButtonStyle"
            android:padding="10dp"/>
        <Button
            android:id="@+id/event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Мероприятия"
            style="@style/MyButtonStyle"
            android:padding="10dp"/>
        <Button
            android:id="@+id/asset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="КРужок"
            style="@style/MyButtonStyle"
            android:padding="10dp"/>
        <Button
            android:id="@+id/nutrition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="питание"
            style="@style/MyButtonStyle"
            android:padding="10dp"/>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>
    <!-- Нижний бар -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#E3D5CA"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">
        <ImageView
            style="@style/MyImageView"
            app:srcCompat="@drawable/user"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:padding="3dp"/>
        <View
            style="@style/MyLineVertical"
            android:layout_weight="0.1"/>

        <ImageView
            style="@style/MyImageView"
            app:srcCompat="@drawable/podrobnee"
            android:layout_weight="1" />
        <View
            style="@style/MyLineVertical"
            android:layout_weight="0.1"/>
        <ImageView
            android:id="@+id/startactivity"
            style="@style/MyImageView"
            app:srcCompat="@drawable/logotype"
            android:layout_weight="1"/>
        <View
            style="@style/MyLineVertical"
            android:layout_weight="0.1"/>

        <ImageView
            style="@style/MyImageView"
            app:srcCompat="@drawable/support"
            android:layout_weight="1"/>
        <View
            style="@style/MyLineVertical"
            android:layout_weight="0.1"/>

        <ImageView
            style="@style/MyImageView"
            app:srcCompat="@drawable/exitbutton"
            android:id="@+id/exitbutton"
            android:layout_weight="1"/>

    </LinearLayout>
</RelativeLayout>